{
  "manifest_version": 3,
  "name": "Cyber Countdown",
  "version": "1.0",
  "description": "赛博朋克风格的倒计时插件",
  "permissions": [
    "alarms",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "icons": {
    "128": "icon.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
